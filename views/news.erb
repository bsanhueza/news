<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Google Fonts -->
    <!-- Swap out "Roboto" for the font(s) you want to use -->
    <link href="https://fonts.googleapis.com/css?family=Poppins&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css" crossorigin="anonymous">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    
    <!-- Your own CSS -->
    <link rel="stylesheet" href="/styles.css">

    <title>News from <%= @country.upcase %> </title>
  </head>
  <body>

    <div class="container mt-5">
      <h1>News from <%= @country.upcase %> </h1>
      <h2> <%= @weekday[0] %>, <%= @daynum[0] %> of <%= @month[0] %> of <%= @year[0] %> </h2>
    </div>

    <br> 

    <!-- News Containers-->
    <div class="container">
        <div class="row md-4">
            <% for i in 0..@news_to_display-1 %>
                <div class="col-md text-center">
                    <div class="card" style="width: 18rem;">
                        <img src= <%= @news["articles"][i]["urlToImage"] %> class="card-img-top" alt="...">
                        <div class="card-body">
                            <h3 class="card-title"><%= @news["articles"][i]["title"] %></h3>
                            <p class="card-text"><%= @news["articles"][i]["description"] %></p>
                        </div>
                        <div class="card-body">
                            <a href=<%= @news["articles"][i]["url"] %> target="_blank" class="card-link">Link</a>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
    <br>
    <div class="container">
        <div class="row md-4">

        </div>
    </div>

    <!-- Footer -->
    <hr class="my-4">
    <div class="container footer">
          <ul class="list-unstyled">
              <li><h4>Weather Forecast</h4></li>
              <% for i in 0..3 %>
                <li> 
                    <% if i==0 then %>Current: <% end %>
                    <%= @weekday[i] %>, <%= @daynum[i] %> of <%= @month[i] %> of <%= @year[i] %> -
                    <% if i==0 then %>
                        <%= @forecast["current"]["weather"][0]["main"] %>, <%= @forecast["current"]["temp"].round() %> degrees.
                    <% else %>
                        <%= @forecast["daily"][i]["weather"][0]["main"] %>, <%= @forecast["daily"][i]["temp"]["day"].round() %> degrees.
                    <% end %>
                </li>
              <% end %>
          </ul> 
      </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>